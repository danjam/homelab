---
# Traefik and Docker Socket Proxy
# Generated by Ansible - do not edit manually

secrets:
  cloudflare_email:
    file: {{ traefik_secrets_dir }}/cloudflare_email
  cloudflare_dns_token:
    file: {{ traefik_secrets_dir }}/cloudflare_dns_token

networks:
  homelab:
    name: {{ traefik_network }}
    external: true
  docker_socket:
    name: {{ hostname }}_docker_socket
    external: true

services:
  traefik:
    image: {{ traefik_image }}
    container_name: traefik
    restart: {{ container_restart_policy }}
    networks:
      - homelab
      - docker_socket
    ports:
      - "443:443"
    volumes:
      - {{ traefik_config_dir }}/traefik.yml:/traefik.yml:ro
      - {{ traefik_config_dir }}/dynamic.yaml:/dynamic.yaml:ro
      - {{ traefik_data_dir }}/certs:/certs
      - {{ traefik_logs_dir }}:/logs
    environment:
      CF_API_EMAIL_FILE: /run/secrets/cloudflare_email
      CF_DNS_API_TOKEN_FILE: /run/secrets/cloudflare_dns_token
    extra_hosts:
      - host.docker.internal:172.17.0.1
    secrets:
      - cloudflare_email
      - cloudflare_dns_token
    labels:
      traefik.enable: true
      traefik.http.routers.api.entrypoints: websecure
      traefik.http.routers.api.rule: Host(`traefik.{{ domain }}`)
      traefik.http.routers.api.tls: true
      traefik.http.routers.api.tls.certresolver: {{ traefik_cert_resolver }}
      traefik.http.routers.api.service: api@internal
